generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    Int    @id @default(autoincrement())//id---->promary key
  name  String @default("ritish")
  email String @unique //unique index-->cannot be repeated
  tweet Tweet[]
}
model Tweet{
  id Int @id @default(autoincrement())
  userid Int
  image String?
  body String
  user User @relation(fields: [userid],references: [id])
}

